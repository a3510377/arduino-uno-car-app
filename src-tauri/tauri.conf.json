{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "arduino-uno-car-app",
    "version": "0.2.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true,
        "scope": ["$APP/db", "$APP/db/**"]
      },
      "window": {
        "setAlwaysOnTop": true
      }
    },
    "windows": [
      {
        "title": "Arduino Uno Car App",
        "width": 1000,
        "height": 490,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.monkey-cat.arduino-uno-car-app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "zh-TW"
        },
        "nsis": {
          "installMode": "currentUser",
          "languages": ["TradChinese"]
        }
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/a3510377/arduino-uno-car-app/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYwNTM4QzMyMTUwNTQzQjcKUldTM1F3VVZNb3hUWUJZcnBMRjM2UnIvZEVkL3ZnS3RQZzAzQmhtM2xuTzNJMytsV1NvVkdWa3kK"
    }
  }
}
